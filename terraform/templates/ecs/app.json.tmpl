[
  {
    "name": "${app_image}-app",
    "image": "${app_image}:${app_image_version}",
    "cpu": ${fargate_cpu},
    "memory": ${fargate_memory},
    "networkMode": "awsvpc",
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
        "awslogs-group": "/ecs/${app_image}-app",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "ecs"
        }
    },
    "portMappings": [
      {
        "containerPort": ${app_port},
        "hostPort": ${app_port}
      }
    ],
    "environment": [
      {
        "name": "FOO",
        "value": "BAR"
      }
    ]
  }
]
